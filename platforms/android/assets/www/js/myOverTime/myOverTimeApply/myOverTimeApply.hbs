<div class="page-content" style="background-color: #F0EFF5">
    <div class="mobileframe">
        <div class="wx-group">
            <ul class="wx-settings">
                <li class="wx-item ">
                    <span class="wx-content">
                        <input type="text" placeholder="{{i18n-text 'input-ot-type'}}" readonly id="overTimeType"  class="weui-input" value="" sourceValue=""/>
                            <i class="WeSpark_iconfont right-arrow">&#xe604;</i>
                    </span>
                    <div class="wx-name">{{i18n-text 'overtime-type'}}<span class="font-red spark">*</span></div>
                </li>
            </ul>
        </div>
        <div class="wx-group">
            <ul class="wx-settings">
                <li class="wx-item "><span class="wx-content">

                </span>
                    <div class="wx-name">{{i18n-text 'overtime-reason'}}</div>
                </li>
            </ul>
            <ul class="wx-settings">

                <li class="wx-content form-group form-group-myinfo weui_cell_bd weui_cell_primary">
                    <textarea rows="5" id="feedback" class="weui_input"  style="min-height: 100px;"> </textarea>
                </li>
            </ul>
            <ul class="wx-settings">
                <li class="wx-item ">
                    <span class="wx-content">
                        <input type="text" readonly id="overTimeDate" class="weui-input" value="" sourceValue=""/>
                            <i class="WeSpark_iconfont right-arrow">&#xe604;</i>
                        </span>
                    <div class="wx-name">{{i18n-text 'overtime-date'}}<span class="font-red spark">*</span></div>
                </li>
                <li class="wx-item ">
                    <span class="wx-content">
                        <input type="text" readonly id="startTime" class="weui-input" value="" sourceValue=""/>
                            <i class="WeSpark_iconfont right-arrow">&#xe604;</i>{{i18n-text 'nextDay'}}
                        <span id="confirmStart">
                            <label class="label-switch" id="myContact_contactDetail_label"> <input type="checkbox" id="startNext" />
                               <div class="checkbox" ></div>
                           </label></span>
                    </span>
                    <div class="wx-name wx-date-custom">{{i18n-text 'startTime'}}<span class="font-red spark">*</span></div>

                </li>
                <li class="wx-item ">
                    <span class="wx-content">
                        <input type="text" readonly id="endTime" class="weui-input" value="" sourceValue=""/>
                            <i class="WeSpark_iconfont right-arrow">&#xe604;</i>{{i18n-text 'nextDay'}}
                     <span id="changeEnd">
                        <label class="label-switch" id="myContact_contactDetail_label"> <input type="checkbox" id="endNext" />
                            <div class="checkbox"  ></div>
                        </label>
                     </span>
                    </span>
                    <div class="wx-name wx-date-custom">{{i18n-text 'endTime'}}<span class="font-red spark">*</span></div>
                </li>
            </ul>
        </div>
        <a href="javascript:void(0);" class="weui_btn weui_btn_warn quitSystem btn-quit-color" id="commitButton" style="margin: 20px; color: white">{{i18n-text 'commitButton'}}</a>
    </div>

</div>
